{
  "name": "Energiatodistuspalvelu",
  "version": "0.0.1",
  "license": "EUPL v1.2",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "dev": "webpack serve",
    "storybook": "cross-env NODE_OPTIONS=--openssl-legacy-provider storybook dev -s ./public -p 6006",
    "storybook:build": "cross-env NODE_OPTIONS=--openssl-legacy-provider storybook build",
    "test": "mocha './src/**/*_test.js' --require @babel/register --reporter dot --require init-mocha.js",
    "coverage": "nyc --reporter=html --reporter=text mocha './src/**/*_test.js' --require init-mocha.js --require @babel/register --reporter dot",
    "tdd": "mocha './src/**/*_test.js' --require @babel/register --reporter dot --watch --require init-mocha.js",
    "format": "prettier --write src modheaders.json",
    "check-format": "prettier --check src",
    "build:docs": "jsdoc -r -c ./jsdoc/conf.json",
    "watch:docs": "nodemon --exec npm run build:docs --watch src"
  },
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.6",
    "@storybook/addon-a11y": "^7.6.17",
    "@storybook/addon-actions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/addon-viewport": "^7.6.17",
    "@storybook/addons": "^7.6.17",
    "@storybook/svelte": "^7.6.17",
    "@storybook/svelte-webpack5": "^7.6.17",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.0",
    "cross-env": "^7.0.2",
    "css-loader": "^4.2.2",
    "cssnano": "^4.1.10",
    "generate-json-webpack-plugin": "^2.0.0",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^0.12.0",
    "mocha": "^10.2.0",
    "nyc": "^15.0.1",
    "postcss": "^8.2.13",
    "postcss-import": "^12.0.1",
    "postcss-load-config": "^2.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.2.2",
    "storybook": "^7.6.17",
    "svelte": "^4.0.0",
    "svelte-loader": "^3.2.0",
    "svelte-preprocess": "^3.3.0",
    "tailwindcss": "^1.7.6",
    "webpack": "^5.90.3",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.11.6",
    "@babel/runtime-corejs3": "^7.11.6",
    "big-integer": "^1.6.48",
    "core-js": "^3.6.5",
    "date-fns": "^2.12.0",
    "date-fns-tz": "^1.1.6",
    "dompurify": "^2.2.7",
    "fluture": "^12.2.0",
    "litepicker": "^1.5.7",
    "marked": "^4.0.0",
    "monet": "^0.9.1",
    "qs": "^6.9.7",
    "quill": "^1.3.7",
    "quill-image-drop-module": "^1.0.3",
    "quill-magic-url": "^3.0.2",
    "ramda": "^0.29.0",
    "svelte-i18n": "^3.0.4",
    "svelte-spa-router": "https://github.com/hkorpi/svelte-spa-router.git#v3.1.0+locking",
    "turndown": "^7.0.0"
  },
  "optionalDependencies": {
    "docdash": "^2.0.2",
